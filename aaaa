 public View onCreateView(@NonNull LayoutInflater inflater, @Nullable ViewGroup container, @Nullable Bundle savedInstanceState) {
        View view = inflater.inflate(R.layout.fragment_exercicios, container, false);

        // Obt√©m os CardViews pelo ID
        CardView cardView1 = view.findViewById(R.id.Primeiro1);
        CardView cardView2 = view.findViewById(R.id.Segundo2);
        CardView cardView3 = view.findViewById(R.id.Terceiro3);
        CardView cardView4 = view.findViewById(R.id.Quarto4);

        // Configura o clique de cada CardView
        setupCardViewClick(cardView1, new TTSegundaFeiraFragment());
        setupCardViewClick(cardView2, new TTQuartaFeiraFragment());
        setupCardViewClick(cardView3, new TTSextaFeiraFragment());
        setupCardViewClick(cardView4, new TTSabadoFragment());

        return view;
    }

    private void setupCardViewClick(CardView cardView, Fragment destinationFragment) {
        cardView.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                // Substitui o fragmento atual pelo destino
                FragmentTransaction transaction = getParentFragmentManager().beginTransaction();
                transaction.addToBackStack(null); // Para permitir voltar ao fragmento anterior
                transaction.commit();
            }
